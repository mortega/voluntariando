
<div class="container">


<div class="jumbotron">
  <h1 class="display-3 text-center">Voluntariando</h1> 
</div>

<div class=col-sm-6>
<%= simple_form_for @project do |f| %>
  <%= f.input :name , input_html: { class: "form-control"} %>
  <%= f.input :description, input_html: { class: "form-control"}  %>
  <%= f.input :organizer, input_html: { class: "form-control"}  %>
  <%= f.input :place, input_html: { class: "form-control"}  %>
  <br>
  <%= f.input :initial_date %>
  <br>
  <%= f.input :final_date %>
  <br>
  <%= f.input :activities, input_html: { class: "form-control"}  %>
  <%= f.input :organizer_contact, input_html: { class: "form-control"}  %>
  <br>
  <%= f.button :submit %>
<% end %>
</div>
</div>